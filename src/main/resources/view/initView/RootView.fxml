            <Button fx:id="locationStreetButton" mnemonicParsing="false" onAction="#handleLocationStreet" prefHeight="30.0" text="定位站街">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="sayHelloButton" mnemonicParsing="false" onAction="#handleSayHello" prefHeight="30.0" text="打招呼">
