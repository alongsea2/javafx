            </Button>
            <Button fx:id="friendsNewsButton" mnemonicParsing="false" onAction="#handleFriendsNews" prefHeight="30.0" text="发朋友圈">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="forwardLinkButton" mnemonicParsing="false" onAction="#handleForwardLink" prefHeight="30.0" text="转发链接">
