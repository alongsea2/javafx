               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="acceptRequestButton" mnemonicParsing="false" onAction="#handleAcceptRequest" prefHeight="30.0" text="接受请求">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
